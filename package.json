{
    "name": "bdd-services-darylnyd",
    "version": "1.0.0",
    "description": "Database service for NydArt Advisor application",
    "main": "src/server.js",
    "scripts": {
        "start": "node src/server.js",
        "dev": "nodemon src/server.js",
        "test": "node src/test/simple-test.js",
        "test:full": "node src/test/run-tests.js",
        "test:unit": "node src/test/run-tests.js --unit",
        "test:integration": "node src/test/run-tests.js --integration",
        "test:performance": "node src/test/run-tests.js --performance",
        "test:coverage": "node src/test/run-tests.js --coverage",
        "test:watch": "node src/test/run-tests.js --watch",
        "test:file": "node src/test/run-tests.js --file",
        "test:legacy": "node database.test.js",
        "test:health": "node -e \"require('./database.test.js')\"",
        "migrate": "node src/migrations/updateExistingUsers.js",
        "lint": "eslint src/ --ext .js",
        "lint:fix": "eslint src/ --ext .js --fix",
        "security:audit": "npm audit",
        "security:fix": "npm audit fix",
        "docker:build": "docker build -t nydart-advisor/db-service .",
        "docker:run": "docker run -p 5001:5001 nydart-advisor/db-service",
        "docker:push": "docker push nydart-advisor/db-service",
        "ci:test": "npm run lint && npm run security:audit && npm run test:full",
        "ci:build": "npm run ci:test && npm run docker:build",
        "ci:deploy": "npm run ci:build && npm run docker:push"
    },
    "keywords": [
        "mongodb",
        "database",
        "art",
        "analysis"
    ],
    "author": "DarylNyd",
    "license": "ISC",
    "dependencies": {
        "axios": "^1.11.0",
        "cors": "^2.8.5",
        "dotenv": "^16.5.0",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^7.0.3",
        "prom-client": "^15.1.3"
    },
    "devDependencies": {
        "nodemon": "^2.0.22",
        "mocha": "^10.2.0",
        "chai": "^4.3.7",
        "sinon": "^15.1.0",
        "supertest": "^6.3.3",
        "nyc": "^15.1.0"
    }
}